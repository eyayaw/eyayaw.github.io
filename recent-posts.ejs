<!-- Recent posts with ISO date format (YYYY-MM-DD) -->
<ul class="list">
    <% for (const item of items) { %>
      <li <%= metadataAttrs(item) %>>
        <%= new Date(item.date).toISOString().split('T')[0] %> - <a href="<%- item.path %>" class="listing-title"><%= item.title %></a>
      </li>
    <% } %>
</ul>